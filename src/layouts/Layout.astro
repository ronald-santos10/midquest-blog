---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Seo from "../components/seo.astro";

const { title, description, url, image } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />

    <script src="https://cdn.brevo.com/js/sdk-loader.js" async></script>
    <script>
      (window as any).Brevo = (window as any).Brevo || [];
      (window as any).Brevo.push([
        "init",
        { client_key: "lu37riesyeqqvqjzf90uv2yv" },
      ]);
    </script>

    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-K2N6ZR5M2B"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-K2N6ZR5M2B");
    </script>

    <!-- SEO -->
    <Seo title={title} description={description} url={url} image={image} />
  </head>
  <body>
    <header>
      <Header />
    </header>
    <main
      class="py-12 md:py-16 mx-auto items-center justify-center max-w-5xl px-4 md:px-6 xl:px-0"
    >
      <slot />
    </main>
    <footer class="bg-gray">
      <Footer />
    </footer>
  </body>
</html>

<style>
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "DM Sans", sans-serif;
    color: #161616;
    scroll-behavior: smooth;
  }
</style>
